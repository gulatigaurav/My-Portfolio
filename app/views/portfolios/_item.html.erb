<p><%= link_to item.title, portfolio_display_path(item) %></p>
<p><%= item.subtitle %></p>
<p><%= item.body %></p>
<p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
<%= link_to "Edit", edit_portfolio_path(item) if logged_in?(:site_admin) %>
<%= link_to 'Delete Portfolio Item', portfolio_path(item),
                          method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
