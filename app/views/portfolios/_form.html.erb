
<%= form_for(item) do |f| %>

<% if item.errors.any? %>
  <% item.errors.full_messages.each do |error| %>
    <%= js add_gritter(error, :image => :error, :title => "Gaurav Gulati", time: 2000, sticky: false ) %>
  <% end %>
 <% end %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :main_image %>
      <%= f.file_field :main_image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :thumb_image %>
      <%= f.file_field :thumb_image, class: "form-control" %>
    </div>


  </div>
  <div class="col-md-6">

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control",rows: "13" %>
    </div>

  </div>

 <div class="col-md-2"></div>

<div class="col-md-8">
 <hr>
 <h2>Tech Used...</h2>
   <div>
     <%= f.fields_for :technologies do |technology_form|  %>
        <%= render 'technology_fields', f: technology_form %>
     <% end %>
   </div>
   <div>
     <%= link_to_add_association 'Add Technology', f, :technologies %> <!--# creating more forms for technology -->
   </div>


  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>

</div>
</div>
</div>
