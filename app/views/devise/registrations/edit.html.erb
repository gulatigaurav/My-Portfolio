<div class="starter-template">
    <div class="card">
      <div class="card-block">
        <div class="row">
          <div class="col-md-7">


              <h3 class="card-title"><h2>Edit <%= resource_name.to_s.humanize %></h2>
               </h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name,class: "form-control" %>
        </div>


        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true,class:"form-control",id:"exampleInputEmail1",placeholder: "Enter email" %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>


        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder: "Enter your password" %>
          <% if @minimum_password_length %>
          <small id="emailHelp" class="form-text text-muted"> (leave blank if you don't want to change it otherwise  <%= @minimum_password_length %> characters minimum) </small>
                    <!-- <small id="emailHelp" class="form-text text-muted">    <%= @minimum_password_length %> characters minimum    </small> -->
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", placeholder: "Confirm your password" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <br />
          <%= f.password_field :current_password, autocomplete: "off",class: "form-control" %>
          <small id="emailHelp" class="form-text text-muted"> (Confirm your changes.) </small>

          </div>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>
  <div class="auth-links">
      <%= link_to "Back", :back %> </div>
    </div>
  <div class="col-md-5">
    <br> <br> <br> <br>
    <p> If you have any problems, please feek free to get in touch and we will be solving your problem within 24 hours.</p>
    <p>Still Unhappy? <%= button_to "Cancel your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"%></p>
    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  </div>
</div>


</div>
</div>
