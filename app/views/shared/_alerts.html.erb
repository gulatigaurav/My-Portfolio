<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :image => :alert, :title => "Gaurav Gulati", time: 1500, sticky: false ) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :image => :error, :title => "Gaurav Gulati", time: 1500, sticky: false ) %>
<% else %>
  <%= js add_gritter(flash[:notice], :image => :notice, :title => "Gaurav Gulati", time: 1500, sticky: false ) %>
<% end %>
